
@{
    Layout = null;
}

<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en">
<!--<![endif]-->
<head>
    <meta charset="utf-8" />
    <title>Onboarding Screen JingL</title>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" />
    <meta content="" name="description" />
    <meta content="" name="author" />

    <!-- ================== BEGIN BASE CSS STYLE ================== -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" />
    <link href="~/Jingl/plugins/jquery-ui/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Jingl/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Jingl/plugins/font-awesome/css/all.min.css" rel="stylesheet" />
    <link href="~/Jingl/plugins/animate/animate.min.css" rel="stylesheet" />
    <link href="~/Jingl/css/default/style.min.css" rel="stylesheet" />
    <link href="~/Jingl/css/default/style-responsive.min.css" rel="stylesheet" />
    <link href="~/Jingl/css/apple/theme/style.min.css" rel="stylesheet" />
    <link href="~/Jingl/css/apple/theme/style-responsive.min.css" rel="stylesheet" />
    <link href="~/Jingl/css/style.css" rel="stylesheet" />
    <link href="~/Jingl/css/default/theme/default.css" rel="stylesheet" id="theme" />
    <link href="~/Jingl/css/default/theme/default.css" rel="stylesheet" id="theme" />
    <!-- ================== END BASE CSS STYLE ================== -->
    <!-- ================== BEGIN BASE JS ================== -->
    <script src="~/Jingl/plugins/pace/pace.min.js"></script>
    <!-- ================== END BASE JS ================== -->
</head>
<body class="pace-top">
    <!-- begin #page-loader -->
    <div id="page-loader" class="fade show"><span class="spinner"></span></div>
    <!-- end #page-loader -->
    <!-- begin #page-container -->
    <div id="page-container">
        <!-- begin login -->
        <div class="col-12 card-carousel">
            <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/Jingl/img/banner-creativity.png" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Jingl/img/banner-discover.png" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Jingl/img/banner-account.png" alt="Third slide">
                    </div>
                </div>
            </div>
        </div>

        <div class="login-content">
            <div class="title-login">
                <h4 class="fw-400 mb10">Welcome!</h4>
                <h5 class="fw-400">Signup to get started with the app. <a class ="btn btn-primary" href="@Url.Action("CmnSignIn","Home")">Login</a> 
                     if you already have an account.</h5>
            </div>
            <div class="row text-center ic-login-content">
                <div class="col-4 text-center">
                    <li>
                        <a href="#"><img class="size-ic-sosmed" src="~/Jingl/img/ic-fb.png" alt="" /></a>
                        <h5 class="mt5 fw-400 black-clr">
                            Facebook
                        </h5>
                    </li>
                </div>
                <div class="col-4">
                    <li>
                        <a href="#"><img class="size-ic-sosmed" src="~/Jingl/img/ic-ig.png" alt="" /></a>
                        <h5 class="mt5 fw-400 black-clr">
                            Instagram
                        </h5>
                    </li>
                </div>
                <div class="col-4">
                    <li>
                        <a href="@Url.Action("SignInGmail","Home",new {returnUrl = "http://localhost"  })"><img class="size-ic-sosmed" src="~/Jingl/img/ic-gmail.png" alt="" /></a>
                        <h5 class="mt5 fw-400 black-clr">
                            Gmail
                        </h5>
                    </li>
                </div>
            </div>
            <div class="signup-content text-center">
                <a href="#" class="black-clr">No account yet? <b> Sign Up Here</b></a>
            </div>
        </div>
    </div>
    <!-- end page container -->
    <!-- ================== BEGIN BASE JS ================== -->
    <script src="~/Jingl/plugins/jquery/jquery-3.3.1.min.js"></script>
    <script src="~/Jingl/plugins/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/Jingl/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!--[if lt IE 9]>
        <script src="crossbrowserjs/html5shiv.js"></script>
        <script src="crossbrowserjs/respond.min.js"></script>
        <script src="crossbrowserjs/excanvas.min.js"></script>
    <![endif]-->
    <script src="~/Jingl/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/Jingl/plugins/js-cookie/js.cookie.js"></script>
    <script src="~/Jingl/js/theme/default.min.js"></script>
    <script src="~/Jingl/js/apps.min.js"></script>
    <!-- ================== END BASE JS ================== -->

    <script>
    $(document).ready(function () {
            App.init();
        });</script>
</body>
</html>
