@model IEnumerable<Jingl.General.Model.Admin.Master.BannerModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_Adm.cshtml";
}

<div class="panel panel-inverse">
    <div class="panel-heading">
        <div class="panel-heading-btn">
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-redo"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
        </div>
        <h4 class="panel-title">Banner</h4>
    </div>
    <div class="panel-body">
        <p>
            <a class="btn btn-pink" asp-action="Create">Create New</a>
        </p>
        <table class="table table-striped table-bordered" id="data-table-responsive" style="width:100%">
            <thead>
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.BannerCategory)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BannerNm)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BannerDesc)
                    </th>
                    <th>
                        Image
                    </th>
                  


                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.BannerCategory)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BannerNm)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BannerDesc)
                        </td>
                        <td>
                            <img src="@item.Img" alt="Alternate Text" style="width:15%"/>
                        </td>
                       


                        <td>
                            @Html.ActionLink("Edit", "Edit", "AdmBanner", new { id = item.Id }, new { @class = "btn btn-success m-b-5" })
                            @Html.ActionLink("Details", "Details", "AdmBanner", new { id = item.Id }, new { @class = "btn btn-warning m-b-5" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger m-b-5" })

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            App.init();
            TableManageResponsive.init();
        });
    </script>
}
