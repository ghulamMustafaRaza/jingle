@model Jingl.General.Model.Admin.Transaction.TalentVideoModel
@{
    ViewData["Title"] = "Video";
    Layout = "~/Views/Shared/_Temp_Layout.cshtml";
}

<div class="box-white">
    <div class="header-menu m-t-20">
        <ul class="nav">
            <li class="nav-item text-center pull-left">
                <a class="nav-link " asp-controller="Account" asp-action="Profile">
                    <div class="icon-img mb4">
                        <img class="icon-menu" src="/template/img/ic-back-white.png" alt="" />
                    </div>
                </a>
            </li>
            <li class="nav-item justify-content-center mr-center">
                <h5 class="nav-link -ml54">Talent Video</h5>
            </li>
        </ul>
    </div>
    <hr />

    <div class="card-content-home">
                <div class="row">
                    <div class="col-12">
                        <div class="share-video">
                            <input type="hidden" value="@Model.Id" id="TalentId" />
                            <img src="@Model.ProfImg" alt="" class="media-object rounded-corner" />
                            <h4 class="media-heading">@Model.CustomerName</h4>
                        </div>
                    </div>
                </div>
                <div class="trending-card">
                    <div class="row">
                        @{
                            <div class="col-12">
                                <div class="card-video-home">
                                    <div class="embed-responsive embed-responsive-4by3 card-img-top">

                                        <video width="100%" height="500" controls autoplay loop muted id="adVIdeo" style="margin-top:5px;">
                                            <source src="@Model.Link" type="video/mp4" />
                                        </video>
                                    </div>
                                    <div class="card-body-video">
                                        <h6 class="title-video">@Model.ProjectNm</h6>
                                        <p class="card-text p-t-20 p-b-20"><a href="@Url.Action("Index","Home")" class="btn btn-blue">kembali ke beranda</a></p>
                                    </div>
                                </div>
                            </div>
                        }       
                    </div>
                </div>
    </div>
</div>
